} else {
<div class="content">
	<div class="header">
		<div class="header-image">
			<img src="@Model.profilePicture" alt="error loading image" />
		</div>
		<div class="header-info">
			<div class="profile-info">
				<div class="info-pane-one">
					<h1>@Model.profile.FirstName @Model.profile.LastName</h1>
					<h6>@Model.profile.Email</h6>
				</div>
				<div class="info-pane-two">
					<ul>
						<li>
							<p>
								occupation
							</p>
							<span>@Model.profile.Occupation</span>
						</li>
						<li>
							<p>
								website
							</p>
							<span><a href="@Model.profile.Website">@Model.profile.Website</a></span>
						</li>
						<li>
							<p>
								country
							</p>
							<span>@Model.profile.Country</span>
						</li>
						<li>
							<p>
								certificates
							</p>
							<span>@Model.facm.certificate.ToList().Count()</span>
						</li>
						@if(Model.profile.isPrivate) {

						<li id="private">
							<p>
								Private
							</p>
							<span>Profile is private</span>
						</li>
						}
					</ul>
				</div>
			</div>
			<hr />
			<div class="profile-description">
				<p>
					@Model.profile.Description
				</p>
			</div>
		</div>
	</div>
	<!---->
	@* TODO
		Display favorited certificates here
	*@
	<!---->

	@if (Model.facm.isFavorite.ToList().Contains(true)) {

	<table class="table-favorite">
		<thead>
			<tr>
				<th id="featured-certificates">
					Featured certificates
				</th>
			</tr>
			<tr>
				<th>Certificate</th>
				<th>Description</th>
				<th>Subject</th>
				<th>Admissioner</th>
				<th>View</th>
			</tr>
		</thead>
		<tbody>

	@foreach (var certificate in Model.facm.certificate.ToList()) {
		@if (Model.facm.isFavorite.ToList()[Model.facm.counter]) {
			<tr>
				<td>
					<i class="fa fa-star star"></i>
					<p>
				@certificate.CertificateName
					</p>
				</td>
				<td>
					@certificate.Description
				</td>
				<td>@certificate.Subject</td>
				<td>@certificate.Admissioner</td>
				<td>
					<a asp-action="index" asp-controller="Certificate" asp-route-id="@certificate.CertificateId">
						<i class="fas fa-play-circle"></i>
					</a>
				</td>
			</tr>
		}
		Model.facm.counter++;
	}
		</tbody>
	</table>
	}

	<table>
		<thead>
			<tr>
				<th>Certificate</th>
				<th>Description</th>
				<th>Subject</th>
				<th>Admissioner</th>
				<th>View</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.facm.certificate.ToList().Count() > 0) {
				foreach (var cert in Model.facm.certificate) {
					<tr>
						<td>@cert.CertificateName</td>
						<td>
							@cert.Description
						</td>
						<td>@cert.Subject</td>
						<td>@cert.Admissioner</td>
						<td>
							<a asp-action="index" asp-controller="Certificate" asp-route-id="@cert.CertificateId">
								<i class="fas fa-play-circle"></i>
							</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>
}